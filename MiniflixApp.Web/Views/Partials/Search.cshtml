@model MiniflixApp.Core.Models.ViewModels.SearchViewModel
@{
}
@using (Html.BeginUmbracoForm("Search", "Search", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.FilterOptions)
    <div class="field has-addons">
        @Html.LabelFor(m => m.SearchTerm, "Search", new { @class = "menu-label" })        
    </div>
    <div class="field has-addons">
        <div class="control is-expanded">
            @Html.TextBoxFor(m => m.SearchTerm, new { placeholder = "Search films, TV and books", @class = "input" })
        </div>
        <div class="control">
            <button type="submit" class="button is-info">
                Search
            </button>
        </div>
    </div>
    <div>
        @foreach(var filterGroup in Model.FilterOptions)
        {
            var filters = filterGroup.Value;
            
        }
    </div>
}